# Environment Variables for Production
# Copy this file to .env.prod and customize for your production setup
# NEVER commit this file with real secrets!

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=fra_atlas_prod
POSTGRES_USER=fra_user
POSTGRES_PASSWORD=<CHANGE_THIS_TO_SECURE_PASSWORD>
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=<CHANGE_THIS_TO_SECURE_PASSWORD>

# =============================================================================
# Application Configuration
# =============================================================================
SECRET_KEY=<CHANGE_THIS_TO_SECURE_SECRET_KEY>
FLASK_ENV=production
DEBUG=False
LOG_LEVEL=info

# =============================================================================
# Service Ports
# =============================================================================
NGINX_PORT=80
NGINX_SSL_PORT=443

# =============================================================================
# Production URLs
# =============================================================================
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://your-domain.com/api

# =============================================================================
# External Services
# =============================================================================
SENTRY_DSN=<YOUR_SENTRY_DSN>
LOGGLY_TOKEN=<YOUR_LOGGLY_TOKEN>

# =============================================================================
# Railway.app Specific (if deploying to Railway)
# =============================================================================
# Railway automatically provides these:
# RAILWAY_STATIC_URL
# RAILWAY_PUBLIC_DOMAIN
# RAILWAY_ENVIRONMENT
# DATABASE_URL (if using Railway Postgres addon)
# REDIS_URL (if using Railway Redis addon)

# =============================================================================
# AWS Specific (if deploying to AWS)
# =============================================================================
# AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
# AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>
# AWS_DEFAULT_REGION=us-east-1
# AWS_S3_BUCKET=<YOUR_S3_BUCKET>

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# =============================================================================
# Monitoring and Logging
# =============================================================================
# NEW_RELIC_LICENSE_KEY=<YOUR_NEWRELIC_KEY>
# DATADOG_API_KEY=<YOUR_DATADOG_KEY>

# =============================================================================
# Blockchain Configuration (if using blockchain features)
# =============================================================================
# ETHEREUM_RPC_URL=<YOUR_ETHEREUM_RPC_URL>
# CONTRACT_ADDRESS=<YOUR_CONTRACT_ADDRESS>
# PRIVATE_KEY=<YOUR_PRIVATE_KEY>
