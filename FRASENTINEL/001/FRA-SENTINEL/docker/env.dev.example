# Environment Variables for Development
# Copy this file to .env.dev and customize for your development setup

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=fra_atlas_dev
POSTGRES_USER=fra_user
POSTGRES_PASSWORD=dev_password_change_this
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=dev_redis_password_change_this
REDIS_PORT=6379

# =============================================================================
# Application Configuration
# =============================================================================
SECRET_KEY=dev-secret-key-change-this-in-production
FLASK_ENV=development
DEBUG=True
LOG_LEVEL=debug

# =============================================================================
# Service Ports
# =============================================================================
BACKEND_PORT=5000
NGINX_PORT=80
PGADMIN_PORT=8080

# =============================================================================
# pgAdmin Configuration
# =============================================================================
PGADMIN_EMAIL=admin@fra-sentinel.local
PGADMIN_PASSWORD=admin

# =============================================================================
# Development URLs
# =============================================================================
FRONTEND_URL=http://localhost
BACKEND_URL=http://localhost:5000

# =============================================================================
# External Services (Optional for Development)
# =============================================================================
# SENTRY_DSN=your-sentry-dsn-for-development
# LOGGLY_TOKEN=your-loggly-token-for-development

# =============================================================================
# OCR and ML Configuration
# =============================================================================
TESSERACT_CMD=/usr/bin/tesseract
GDAL_DATA=/usr/share/gdal
PROJ_LIB=/usr/share/proj

# =============================================================================
# Blockchain Configuration (Optional)
# =============================================================================
# ETHEREUM_RPC_URL=http://localhost:8545
# CONTRACT_ADDRESS=0x...
# PRIVATE_KEY=your-private-key-for-development
